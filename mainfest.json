{
    "manifest_version" : 3,
    "name":"SumIT",
    "version":"1.0.0",
    "description":"A tool that summarizes all your meetings.",

    
    "default_locale": "en",
    
    "icons": {
        "16":"iconsx50.png",
        "48":"iconsx100.png"
    },

    "content_scripts" : [
        {
            "js":[
                "scripts/content.js",
                "jquery.min.js"
            ],
            "matches":[
                "https://meet.google.com"
            ]
        }
    ],

    "browser_action":{
        "default_popup":"extension.html",
        "default_title":"SumIT"
    },

    "permissions":[
        "tabs",
        "http://*/",
        "storage",
        "notifications"
    ]
}